<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <link href="/static/css/style.css" type="text/css" rel="stylesheet" />
  </head>

  <body>

    <div id="box">

      <!--[x] In case of error, you should display div with class "errorContainer" -->
      <!--[x] You can choose to display the first error or all of them (error message/s in your opinion) -->
      {{#if errors}}
        <div>
          <div class="errorContainer">
            {{#each errors}}
              <p>{{msg}}</p>
            {{/each}}
          </div>
        </div>
      {{/if}}

      <nav>
        <a href="#">Home</a>
        <ul>
          <!--[x] Guest users and Logged users -->
          <li><a href="/">Housing for rent</a></li>
          {{#if hasUser}}
            <!--[x] Logged users -->
            <li><a href="/create">Create offer</a></li>
            <li><a href="/search">Search</a></li>
            <li><a href="/logout">Logout</a></li>
          {{else}}
            <!--[x] Guest users -->
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
          {{/if}}
        </ul>
      </nav>

      <main>
        {{{body}}}

      </main>

      <footer>
        Â© 2021

      </footer>
    </div>

  </body>

</html>