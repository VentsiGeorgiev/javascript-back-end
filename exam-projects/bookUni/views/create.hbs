{{#with data}}
  <section id="viewAddhotel">
    <h2>Add new hotel</h2>
    <form action="/create" method="post" id="formAddhotel">
      <label for="hotel">Hotel name:</label>
      <input type="text" id="hotel" name="name" value="{{name}}" placeholder="Hotel name" />
      <label for="city">City:</label>
      <input type="text" id="city" name="city" value="{{city}}" placeholder="City" />
      <label for="free-rooms">Free rooms:</label>
      <input type="number" id="free-rooms" name="freeRooms" value="{{freeRooms}}" placeholder="Free rooms" />
      <label for="imgUrl">Image:</label>
      <input type="text" id="imgUrl" name="imgUrl" value="{{imgUrl}}" placeholder="https://" />

      <input type="submit" class="create" value="Add" />
    </form>
  </section>
{{/with}}